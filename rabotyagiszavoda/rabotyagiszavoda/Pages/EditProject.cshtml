@page
@model rabotyagiszavoda.Pages.EditProject


@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Project.ProjId" />
            <div class="form-group">
                <label asp-for="Project.Title" class="control-label"></label>
                <input asp-for="Project.Title" class="form-control" />
                <span asp-validation-for="Project.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Cost" class="control-label"></label>
                <input asp-for="Project.Cost" class="form-control" />
                <span asp-validation-for="Project.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.WorkerId" class="control-label"></label>
                <select asp-for="Project.WorkerId" class="form-control" asp-items="ViewBag.WorkerID">
                    <option disabled selected>No worker</option>
                </select>
                <span asp-validation-for="Project.WorkerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ProjectPage">Back to List</a>
</div>

